                            <html><html-template location="component://shopmax/webapp/shopmax/includes/mainhomepage.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="LeftPanel">
        <section>
            <actions>
            </actions>
            <widgets>
            </widgets>
        </section>
    </screen>
</screens>