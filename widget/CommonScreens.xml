<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="ShopMaxUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                
                <!-- The default (global) shortcut icon -->
                <set field="layoutSettings.shortcutIcon" value="/shopmax/shopmaximages/img/favicon.ico" global="true"/>
                
                <set field="layoutSettings.companyName" from-field="uiLabelMap.ShopMaxCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.ShopMaxCompanySubtitle" global="true"/>

                <set field="activeApp" value="shopmax" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://shopmax/widget/ShopMaxMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.ShopMaxApplication}" global="true"/>
                
                <set field="headerTemplateLocation" from-field="layoutSettings.VT_HDR_TMPLT_LOC[0]" default-value="component://shopmax/webapp/shopmax/includes/header.ftl"/>
                <set field="footerTemplateLocation" from-field="layoutSettings.VT_FTR_TMPLT_LOC[0]" default-value="component://shopmax/webapp/shopmax/includes/footer.ftl"/>
            </actions>
            <widgets>
<!--                 <platform-specific><html><html-template location="component://shopmax/webapp/shopmax/includes/headerhead.ftl"/></html></platform-specific> -->
<!--                 <platform-specific><html><html-template location="component://shopmax/webapp/shopmax/includes/openhtmlbody.ftl"/></html></platform-specific> -->
                
<!--                 render header -->
<!--                 <platform-specific> -->
<!--                     <html><html-template location="${headerTemplateLocation}"/></html> -->
<!--                 </platform-specific> -->
                
<!--                 <container id="main"> -->
<!--                     <decorator-section-include name="body"/> -->
<!--                 </container> -->
                
<!--                 <platform-specific> -->
<!--                     <html><html-template location="${footerTemplateLocation}" /></html> -->
<!--                 </platform-specific> -->
                
<!--                 <platform-specific><html><html-template location="component://shopmax/webapp/shopmax/includes/closehtmlbody.ftl"/></html></platform-specific> -->
<!--                 <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/> -->
            </widgets>
        </section>
    </screen>

    <screen name="ShopMaxCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <!-- <condition>
                                <if-has-permission permission="SHOPMAX" action="_VIEW"/>
                            </condition> -->
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <!-- <fail-widgets>
                                <label style="h3">${uiLabelMap.ShopMaxViewPermissionError}</label>
                            </fail-widgets> -->
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="action-decorator">
        <section>
            <actions>
                <entity-and list="webAnalyticsConfigs" entity-name="WebAnalyticsConfig">
                    <field-map field-name="webSiteId"/>
                    <field-map field-name="webAnalyticsTypeId" value="GOOGLE_ANALYTICS"/>
                </entity-and>
            </actions>
            <widgets>
                <include-screen name="GlobalActions" location="component://shopmax/widget/CommonScreens.xml"/>
                <platform-specific><html><html-template location="component://shopmax/webapp/shopmax/website/ActionDecorator.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="GlobalActions">
        <section>
            <actions>
            </actions>
            <widgets />
        </section>
    </screen>
</screens>