<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="product">
        <section>
            <actions>
                <set field="headerItem" value="product"/>
            </actions>
            <widgets>
                <decorator-screen name="ShopMaxCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://shopmax/webapp/shopmax/catalog/productdetail.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="categorygridview">
        <section>
            <actions>
                <property-map resource="ShopMaxUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="headerItem" value="categorygridview"/>
                <set field="breadCrumTitle" value="${uiLabelMap.ShopMaxCategoryGridView}"/>
            </actions>
            <widgets>
                <decorator-screen name="ShopMaxCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://shopmax/webapp/shopmax/catalog/categorygridview.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="categorylistview">
        <section>
            <actions>
                <property-map resource="ShopMaxUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="headerItem" value="categorylistview"/>
                <set field="breadCrumTitle" value="${uiLabelMap.ShopMaxCategoryListView}"/>
            </actions>
            <widgets>
                <decorator-screen name="ShopMaxCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://shopmax/webapp/shopmax/catalog/categorylistview.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
