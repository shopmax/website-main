/* ==========================================================================
   Author's custom styles
   ========================================================================== */

body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 0.8em;
  line-height: 1.4285;
  color: #333333;
  background:#ffffff url('../img/body-bg.png') repeat;
}

/* colors
bright blue;#469BEB;
light blue:#D6E7F6;
bright green;#84B234;
light green:#E6F1D1;
slider bg:#D398A5;
*/

a {color:#469BEB;}
a:hover {color:#fff;}
#topnav a:hover {text-decoration:underline;}

/* header
-----------------------------------------------------------------*/
#topnav {background:#302f2f;
	border-bottom:1px solid #3C4D5D;
	height:70px;max-height:70px;
}

#topnav .container {position:relative;top:0;}
.navbar-fixed-top {margin-bottom:0;}
.navbar-fixed-top .navbar-inner, .navbar-fixed-bottom .navbar-inner {
    padding:0;
}
.navbar .brand {padding-right:0;padding-top:0;padding-bottom:5px;margin-right:13px;}
#topnav.navbar .nav {margin-right:0;}
.header-search {width:457px;float:left;margin-right:23px;}
#personal,#personal select {width:162px;}
#personal {margin-right:32px;}
#cart-info {width:108px;margin:0 0;}
#mainnav {background:#469BEB url('../img/mainnav-bg.png') repeat-x 0 100%;
    content: "";margin-bottom:0;display:block;padding:0 0 21px 0;
}
#mainnav .navbar-inner {min-height:29px;}
.navbar-inner {min-height:auto;}
#mainnav .navbar .nav {float:none;}


/* top menu */
.navbar {margin-bottom:0;}
.navbar .nav li a {color:white;padding:7px 10px 7px 0;font-size:12px;}
.navbar .nav li.last a {padding-right:0;}


/* header form */
.navbar-form {margin-left:0;position:relative;width:454px;}
.search-filters {position:relative;float:left;}
.main-search-control {
	border-left:1px solid #469BEB;
	border-bottom:1px solid #469beb;
	display:table;width:424px;background:none;
}
.main-search-input {
    width: 100%;
}

.main-search-control input {
    border: 0 none;
    height: 27px;
    line-height: 21px;
    margin-left: 0;
    padding:0 0;
    width: 100%;
}

.main-search-input, .main-search-dropdown {
    display: table-cell;
    line-height: 10px;
    vertical-align: top;
	background:#fff;
}

.main-search-control select {width:120px;font-weight:bold;color:#000}
.main-search-control option {line-height:1.5;}

.drop-select {
    height: 29px;
    left:0;
    right:auto;
    cursor: pointer;
    height: 24px;
    margin: 0;
    opacity: 0;
    outline: 0 none;
    overflow: hidden;
    padding: 0;
    position: absolute;
    right: 0;
    top: 0;
    visibility: visible;
}

.navbar-form input, .navbar-form select, .navbar-form .radio, .navbar-form .checkbox {
    margin-top:0;
}

form.navbar-form * {border-radius:0;}

.btn-search {
	background:url('../img/btn-search.png') no-repeat 0 0;
	width:29px;height:30px;
}

.btn-search-large {
	background:url('../img/btn-search-large.png') no-repeat 0 0;
	width:33px;height:33px;
}

.btn-email {
	background:url('../img/btn-email.png') no-repeat 0 0;
	width:36px;	height:33px;
}

/* personalised section */
#personal h4 {font-size:100%;font-weight:bold;font-size:110%;margin:7px 0 9px;color:#fff;text-indent:20px;float:left;}
#personal h4 span {color:#469BEC;}
#personal form {margin:0 0 0 0;}

/* cart info */
#cart-info {
	background:#226EDE url('../img/cartinfo-bg2.png') no-repeat 0 100%;
}

#cart-info h3 {
	color:white;font-size:110%;font-weight:bold;text-align:center;
	margin:2px 0;line-height:1.5;
}
#cart-info p {text-align:center;margin:0 auto 4px;}

/* button styles */
.btn-flat {
	width:92px;
	height:20px;
	line-height:20px;
	display:block;
	margin:0 auto;
	text-transform:uppercase;
	font-size:10px;
	font-weight:bold;
	color:white;
	text-indent:15px;
}

.btn-flat.round {
	background:url('../img/btn-flat-round.png') no-repeat 0 0;
}

.btn-flat.checkout {
	background:url('../img/btn-flat-checkout.png') no-repeat 0 0;
}

.btn-general {
	background:transparent url('../img/btn-general-2.png') no-repeat 0 0;
	width:104px;
	height:27px;
	line-height:27px;
	display:inline-block;
	text-align:center;
	color:white;
	font-weight:bold;
	font-size:85%;
	text-transform:uppercase;
}

.btn-general:hover {
	text-decoration:none;
	text-shadow:0 1px 1px #666;
	color:#333;
}

.btn-flat:hover {
	color:#ccc;
	text-decoration:none;
}

/* MAIN NAV
-------------------------------------------- */
#mainnav .nav {padding:0;}
#mainnav .nav li  a {line-height:27px;text-shadow:none;font-size:120%;height:27px;}
#mainnav .nav li a:hover,
#mainnav .nav li.on a {background:#2D7BC5;color:#fff;}
#mainnav .nav  li {float:left;}

/* SIDEBAR
---------------------------------------------- */
.sidebar .innerbox { 
	border-left:1px solid #D7D6D2;
	border-right:1px solid #d7d6d2;
	margin-bottom:20px;
	background:#fff url('../img/promotions-bg.png') no-repeat 0 100%;
	padding-bottom:15px;
}

.sidebar ul li a {
	color:#469BEB;
	line-height:40px;
}

.sidebar ul {margin-right:15px;}

/* sidebar fonts gerogia declrtn */

.georgia h1, .georgia h2, .georgia h3, .georgia h4, .georgia h5, .georgia h6,
.sidebar .innerbox h2 {
	font-family:'Georgia Italic',Georgia,serif;
	font-style:italic;font-weight:500;
}

.sidebar h1,.sidebar h2,.sidebar h3,.sidebar h4,.sidebar h5,.sidebar h6 {
	margin-top:0;
	text-indent:12px;
}

/* sidebar main headings */
.sidebar .innerbox h2,
.sidebar .innerbox h3 {
	margin-top:0;font-size:130%;
}

.sidebar .innerbox h2 {color:white;}

.sidebar .categories h2 {
	background:#383938;
}

.sidebar .promotions h2 {
	background:#84B234
}


/* sidebar tabs hierarchy;
 <div.tabbed>
	<div.tabs>
		<ul.tabnavs>
			<li.active><h3><a>text</a></h3><li>
			<li><h3><a>text</a></h3><li>
		</.ultabnavs>
		<div#product-tab />
		<div#services-tab />
	</ul.tabs>
</div.tabbed>
*/
.sidebar .tabbed {
	position:relative;
}

.sidebar .tabbed,.sidebar .tabbed a {
	font-family:'Georgia Italic',Georgia,serif;
	font-style:italic;
}

.sidebar .tabbed .tabs {
	background:#fff url('../img/sidebar-ul-bg.png') repeat-x 0 84%;
	padding-left:4px;
}

.sidebar .tabnavs {
	overflow:hidden;margin:0;
}

.sidebar .tabnavs li {
	float:left;width:107px;
	background:none;
	border:none;
	padding:0;
	margin-right:4px;/* have to change this back if the sidebar narrows */
	background:#BEDCF8;
	height:34px;
	border-radius:2px 2px 0 0;
}

.sidebar .tabnavs h3 {
	width:107px;
	float:left;
}

.sidebar .tabnavs li.active,
.sidebar .tabnavs li:hover {	
	background:url('../img/sidebar-active-bg.png') no-repeat 0 0;
	color:white;
	height:42px;
	border-radius:0 0 0 0;
	
}

.sidebar .tabnavs h3 a {color:#6F7377;}
.sidebar .tabnavs li.active a,
.sidebar .tabnavs li a:hover {color:white;}

.sidebar .tabcontent ul li {
	background:white url('../img/listmarker-cats.png') no-repeat 0 50%;
	border-bottom:2px dotted #C2CBD3;
	height:40px;
	padding:0 0 0 20px;
	margin:0;
	white-space:pre;

}

/* promotions sidebar */
.promotions p {font-size:85%;}
.promotions p.price {font-size:111%;}
.promotions .product-list * {margin-bottom:6px;}
.promotions .product-list li {margin-bottom:23px;clear:both;}
.promotions .product-list img {margin-right:10px;
					padding:3px 2px 2px 3px;
					border-right:1px solid #C0C0C0;
					border-bottom:1px solid #C0C0C0;
					border-top:1px solid #fff;
					border-left:1px solid #fff'
					
}
.promotions p, .promotions h5 { line-height:1;}
.promotions .product-list h5 + p {margin-bottom:15px;}
.sidebar .promotions h3 {text-transform:uppercase;font-size:90%;}
.product-list h5 {text-indent:0;}
.promotions ul {margin-left:12px;margin-bottom:10px;}
.price {color:#48A4CB;font-weight:bold;font-size:110%;}

/* latest shops sidebar some code on lines /=346 */
.promotions.img-list ul li {margin-right:7px;margin-bottom:15px;}
.promotions.img-list img {background:white;padding:6px 7px 7px 6px;
	border-right:1px solid #ACB49C;border-bottom:1px solid #acb49c;
	border-left:2px solid white;border-top:2px solid white;
 }
 .img-list ul {margin:0 0 0 4px;padding:0;overflow:hidden;}

.sidebar hr {width:100%;background:#DAD8D5;color:#DAD8D5;height:1px;margin:12px 0;}

/* MAIN CONTENT <.container.content>
					<.row>
						<.span9.main-content> large right column
							( home page )
							<#gallery-slider-container />
							<#events />
						<.span3.sidebar> smaller left sidebar
					</.row>
				</.container.content>			
-------------------------------------- */
.main-content > div {margin-bottom:20px;}
.main-content ul {margin:0;padding:0;overflow:hidden;}
.main-content ul li,.img-list ul li {float:left;}
.main-content h3,
.main-content #recently-added h3 {font-family:'Georgia Italic',Georgia,serif;
	font-style:italic;font-size:170%;color:#469BEB;font-weight:normal;
	text-indent:12px;margin:0;
	text-align:left;width:auto;
}

/* events */
.main-content #events h3 {margin-bottom:-10px;}

/* coloured background divs featured shops featured products */
.main-content .featured h3 {color:white;margin:0;border-radius:4px 4px 0 0;width:200px;text-align:center;text-indent:0;}
.main-content .featured.green h3 {background:#84B234;}
.main-content .featured.blue h3 {background:#469BEB;}
.main-content .green ul {background:#E6F1D1 url('../img/ul-bg-green.png') no-repeat 75px 0;border-top:3px solid #84B234;}
.main-content .blue ul {background:#D6E7F6 url('../img/ul-bg-blue.png') no-repeat 75px 0;border-top:3px solid #469BEB;}
.main-content .featured ul {padding:12px 0;}
.main-content .featured li {
	padding:12px;border-left:1px solid #CCCEC8;
}
.main-content .featured li:first-child {border:none;}
.main-content .featured img {background:white;padding:6px 7px 7px 6px;
	border-right:1px solid #ACB49C;border-bottom:1px solid #acb49c;
	border-left:2px solid white;border-top:2px solid white;
 }

 .main-content .featured h4 {font-size: 110%;
    font-weight: bold;
    margin-bottom: 0;
    margin-top: 5px;
}

/* recently-added */
.main-content #recently-added li {
	border:none;padding:7px;
}

.main-content p { /* main content font-size */
	font-size:85%;
    margin: 0 0 15px;
}

.main-content p.price {font-size:111%;color:#84B234;}
.main-content .featured .btn-general {float:right;font-size:105%;letter-spacing:0.3px;}
.main-content .featured li p {clear:both;}
.main-content p.addshop {font-size:100%;}

/* FOOTER
--------------------------------------  */
footer {background:#393D42;clear:both;}
footer #top-foot .container {padding:35px 0 45px;}
footer h3, footer p {color:#999}
footer h3 {font-size:130%;margin-top:0;line-height:1.4;}
footer ul {margin-left:0;margin-right:0;}
footer #logo p img {float:right;}

/* text variations */
footer a, footer em {color:#fff;}
footer #top-foot a, footer em {font-weight:bold;}
footer #top-foot a:hover {text-decoration:none;color:#999;}
footer #top-foot strong {font-size:120%;color:white;}
footer #top-foot strong a {color:#469BEB;}
footer dfn {font-family:'Georgia Italic',Georgia,serif;font-style:italic;}

footer #blue-foot {font-family:Helvetica,Arial,sans-serif;font-size:90%;}
footer .noheading {margin-top:32px;}
footer form input[type='text'] {width:179px;
	border-radius:4px 0 0 4px;line-height:23px;height:23px;
	color:#469BEB;font-style:italic;font-family:Georgia,sans-serif;
}
footer #connect li {margin-left:13%;}
footer #connect li:first-child {margin-left:6px;}
footer #blue-foot {background:#469BEB url('../img/footer-bg.png') repeat-x 0 100%;padding:0 0 8px 0;margin:0 0 15px 0;}
footer #blue-foot ul li {float:left;margin-right:3%;color:white;line-height:58px;}

/* IE7 STYLES
------------------------------------------- */
/* ie7 hack for input, ie7 ignoring chosen() jQuery */
.lt-ie8 .main-search-input {
	width:70%;float:right;
}

.lt-ie8 .main-search-dropdown {
	width:30%;height:auto;
}

.lt-ie8 .main-search-dropdown select {
	width:130px;
}

.lt-ie8 .main-search-dropdown select option {
	line-height:1.5;
}

/* GENERAL STYLES
--------------------------------------- */

ul li, * ul li, * html ul li,* html.lt-ie8 ul li {/* hello, IE7? */
	list-style:none;
}

button {margin:0;border:none;}

.small {font-size:75%;line-height:3;}

.btn  { 
	padding:5px;
	color:#000;
	text-shadow: 0 1px 0 rgba(255, 255, 255, 0.4);
    vertical-align: middle;
}	

.cssgradients .btn {
	color:white;
	background-image: linear-gradient(to top,#469BEB,#D6E7F6);
}

.cssgradients .btn:hover {
	background-image: linear-gradient(to top, #469beb,#fff);
	background-position:0 0;
}